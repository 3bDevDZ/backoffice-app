{
  "name": "gmflow-frontend-tests",
  "version": "1.0.0",
  "description": "Playwright tests for GMFlow frontend",
  "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "test:all": "playwright test --reporter=html,list",
    "test:generate-report": "node generate-test-report.js",
    "test:run-and-report": "npm test && npm run test:generate-report"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0"
  }
}

